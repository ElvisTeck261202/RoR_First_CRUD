<%= form_with model: article do |form| %>
<div class="container-fluid row justify-content-center">
  <div class="container-fluid row justify-content-center" style="margin:20px ">
    <h3 for="exampleFormControlInput1" class="form-label text-center"><%= :title %></h3><br>
    <input type="text" class="form-control row justify-content-center " placeholder= <%= form.text_field :title %> ><br>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="container-fluid row justify-content-center">
    <h3 class="text-center"><%= :body %></h3><br>
    <input type="text" class="form-control " placeholder= <%= form.text_field :body %> ><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class=" w-25 row justify-content-center">
    <%= form.submit %>
  </div>
  
</div>

<% end %>
